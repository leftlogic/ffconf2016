- var menu = [{ 'title': 'sessions', 'url': '/#sessions' }, { 'title': 'workshops', 'url': '#workshops' }, { 'title': 'locations', 'url': '/#locations' }, { 'title': 'diversity', 'url': '/#diversity' }, { 'title': 'sponsors', 'url': '/#sponsors' }]
- var text = {}
- text.intro1 = '1 day conference'
- text.intro2 = 'run twice'
- text.tag = '#ffconf'
- text.location1 = 'Duke of York\'s'
- text.location2 = 'Brighton, UK'
- text.date = 'November 10 & 11'

- var line = 'Tickets @ Â£160+VAT will be sold on the 15th and 22nd July at 11am BST.'
- var button = 'On sale 13 July'
- var buy = false
- var buttonLink = false

if config.phase == 1
  if config.soldout.conference
    if config.soldout.workshops
      - line = 'Tickets for this phase sold out. More go on sale 22nd July.'
      - button = 'Sold Out'
      - buy = false
    else
      - line = 'Workshop (+conf pass) tickets available now. Next batch on sale 22nd July.'
      - button = 'Buy Tickets'
      - buy = true
  else
    - line = 'Conference & workshop (+conf pass) tickets available to buy!'
    - button = 'Buy Tickets'
    - buy = true
if config.phase >= 2 && config.phase < 4
  if config.soldout.conference
    if config.soldout.workshops
      - line = 'All tickets for this years\' conference have been sold.'
      - button = 'Sold Out'
      - buy = false
    else
      - line = 'Workshop (+conf pass) available to buy. Last few remaining.'
      - button = 'Buy Tickets'
      - buy = true
  else
    - line = 'Conference & workshop (+conf pass) available now. Last chance batch.'
    - button = 'Buy Tickets'
    - buy = true
if config.phase == 4
    - line = ''
    // - buttonLink = '#'; //https://www.youtube.com/playlist?list=PLXmT1r4krsTqrwW2jjXIXuCtFQ-5BIn-s'
    - button = 'Videos Soon'
    - buy = false


