  div.nav-main-wrapper#sticky-header
    nav.nav-main(role='navigation')
      div.tickets-wrapper
        if button != ''
          if buy
            a.button.tickets-button(href=ticketUrl, target='_blank')!= button
          else if buttonLink
            a.button.tickets-button(href=buttonLink, target='_blank')!= button
          else
            span.button.tickets-button!= button
      if config.phase >= 0.5
        ul.nav-list#nav-list
          each item in menu
